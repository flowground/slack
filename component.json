{
  "title": "Slack API",
  "description": "elastic.io component for the Slack API",
  "docsUrl": "https://github.com/elasticio/petstore-component-java",
  "language": "java",
  "actions": {
    "sendMessage": {
      "title": "Send Message",
      "main": "de.telekom.idu.toa.SendMessage",
      "fields": {
        "slack_webhook_url": {
          "label": "Slack WebHook",
          "viewClass": "TextFieldView",
          "placeholder": "URL",
          "required": true
        },
        "slack_channel": {
          "label": "Slack Channel",
          "viewClass": "TextFieldView",
          "placeholder": "Channel",
          "required": true
        },
        "slack_username": {
          "label": "Slack Username",
          "viewClass": "TextFieldView",
          "placeholder": "Username",
          "required": true
        }
      }
    }
  }
}